<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_first_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mneuonic.tictactoe.FirstScreen">

    <EditText
        android:layout_width="180sp"
        android:layout_height="40sp"
        android:id="@+id/etPlayer1"
        android:hint="Player 1 Name"
        android:padding="8dp"
        android:background="@color/Lal"
        android:layout_margin="8dp"
        />
    <EditText
        android:id="@+id/etPlayer2"
        android:layout_width="180sp"
        android:layout_height="40sp"
        android:hint="Player 2 Name"
        android:padding="8dp"
        android:background="@color/Lal"
        android:layout_margin="8dp"
        android:layout_below="@+id/etPlayer1"
        />

    <Button
        android:id="@+id/play"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_below="@+id/etPlayer2"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:text="PLAY"
        />

</RelativeLayout>
